{
  "name": "@auto-industry/core",
  "version": "0.1.0",
  "description": "Core library for industrial protocol adapters and MCP gateway",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./adapter": {
      "types": "./dist/adapter/index.d.ts",
      "import": "./dist/adapter/index.js"
    },
    "./event-bus": {
      "types": "./dist/event-bus/index.d.ts",
      "import": "./dist/event-bus/index.js"
    },
    "./device": {
      "types": "./dist/device/index.d.ts",
      "import": "./dist/device/index.js"
    },
    "./pool": {
      "types": "./dist/pool/index.d.ts",
      "import": "./dist/pool/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "pino": "^9.5.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "typescript": "^5.7.0"
  }
}
