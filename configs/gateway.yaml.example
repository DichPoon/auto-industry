# Auto Industry Gateway Configuration
# This file configures the MCP gateway and connected devices

name: Auto Industry Gateway
version: 0.1.0
logLevel: info  # trace | debug | info | warn | error

# Device configurations
devices:
  # Modbus TCP Device Example
  - deviceId: modbus-plc-1
    protocol: modbus
    name: Modbus TCP PLC
    enabled: true
    timeout: 5000
    # Modbus TCP specific options
    host: 192.168.1.100
    port: 502
    unitId: 1
    reconnect:
      enabled: true
      maxAttempts: 10
      initialDelayMs: 1000
      maxDelayMs: 30000
      backoffMultiplier: 2

  # Modbus RTU Device Example (serial)
